{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<!-- Categories Section Begin -->
<section class="categories mt-5">
    <div class="container">
        <div class="row">
            <div class="categories__slider owl-carousel">

                {% for category in categoryrepo.findAll %}
                    <div class="col-lg-3">
                        <div class="categories__item set-bg" data-setbg="{{ asset('client/img/categories/cat-1.jpg') }}">
                            <h5><a href="{{ path('product-search') }}">{{ category.name }}</a></h5>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>
<!-- Categories Section End -->

<!-- Featured Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Featured Product</h2>
                </div>
                <div class="featured__controls">
                    <ul>
                        <li class="active" data-filter="*">All</li>

                        {% for category in categoryrepo.findAll %}
                            <li data-filter=".{{ category.name }}">{{ category.name }}</li>
                        {% endfor %}

                    </ul>
                </div>
            </div>
        </div>
        <div class="row featured__filter">

            {% for product in products %}

                <div class="col-lg-3 col-md-4 col-sm-6 mix {{ product.category.name }}">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg="{{ asset('client/img/featured/feature-1.jpg') }}">
                            <ul class="featured__item__pic__hover">
                                <li><a href="{{ path('home') }}"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a href="{{ path('product', {id: product.id}) }}">{{ product.name }}</a></h6>
                            <h5>$30.00</h5>
                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>
</section>
<!-- Featured Section End -->

