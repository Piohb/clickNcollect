{% if app.request.uri == '127.0.0.1' %}
    {% set banner = false %}
{% else %}
    {% set banner = true %}
{% endif %}

<!-- Page Preloder -->
<div id="preloder">
    <div class="loader"></div>
</div>

<!-- Header Section Begin -->
<header class="header">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="header__logo">
                    <a href="{{ path('home') }}"><img src="{{ asset('client/img/logo.png') }}" alt="logo"></a>
                </div>
            </div>
            <div class="col-lg-6">
            
            </div>
            <div class="col-lg-3">
                <div class="header__cart">
                    <ul>
                        <li><a href="{{ path('cart') }}"><i class="fa fa-shopping-bag"></i></a></li>
                    </ul>
                    <div class="header__cart__price">
                        {% if app.user %}
                            <a href="{{ path('app_logout') }}"><i class="fa fa-user-times" style="color:black;font-size: larger"></i></a>
                        {% else %}
                            <a href="{{ path('app_login') }}"><i class="fa fa-user" style="color:black;font-size: larger"></i></a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Header Section End -->

<!-- Hero Section Begin -->
<section class="hero {% if banner %}hero-normal{% endif %}">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="hero__categories">
                    <div class="hero__categories__all">
                        <i class="fa fa-bars"></i>
                        <span>Nos Magasins</span>
                    </div>
                    <ul>
                        {% for shop in shoprepo.findAll %}
                            <li><a href="{{ path('shop', {id: shop.id}) }}">{{ shop.name }}</a></li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form" style="width: 100%">
                        <form action="#">
                            <div class="hero__search__categories">
                                All Categories
                                <span class="arrow_carrot-down"></span>

                                {#<option value="">test</option>#}
                            </div>
                            <input type="text" placeholder="What do yo u need?">
                            <button type="submit" class="site-btn">SEARCH</button>
                        </form>
                    </div>
                </div>

                {% if banner is same as(false) %}
                    <div class="hero__item set-bg" data-setbg="{{ asset('client/img/hero/banner.jpg') }}">
                        <div class="hero__text">
                            <span>FRUIT FRESH</span>
                            <h2>Vegetable <br />100% Organic</h2>
                            <p>Free Pickup and Delivery Available</p>
                            <a href="#" class="primary-btn">SHOP NOW</a>
                        </div>
                    </div>
                {% endif %}

            </div>
        </div>
    </div>
</section>
<!-- Hero Section End -->

