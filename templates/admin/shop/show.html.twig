{% extends 'base_admin.html.twig' %}

{% block title %}Shop{% endblock %}

{% block body %}

    {% embed 'admin/title.html.twig' %}
        {% block sectiontitle %}
            <h2 class="mt-4">Shop Item</h2>
            <a href="{{ path('shop_index') }}" class="btn btn-secondary">back to list</a>
        {% endblock %}
    {% endembed %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ shop.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ shop.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ shop.address }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ shop.city }}</td>
            </tr>
            <tr>
                <th>Postcode</th>
                <td>{{ shop.postcode }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex align-items-center">
        <a href="{{ path('shop_edit', {'id': shop.id}) }}" class="btn btn-success mr-2">edit</a>

        {{ include('admin/shop/_delete_form.html.twig') }}
    </div>
{% endblock %}
