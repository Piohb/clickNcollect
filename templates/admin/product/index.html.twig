{% extends 'base_admin.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}

    {% embed 'admin/title.html.twig' %}
        {% block sectiontitle %}
            <h2 class="mt-4">Product index</h2>
            <a href="{{ path('product_new') }}" class="btn btn-primary">Create new</a>
        {% endblock %}
    {% endembed %}

    {% embed 'admin/table.html.twig' %}
        {% block table %}
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Category</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.description }}</td>
                    <td>{{ product.category.name }}</td>
                    <td>
                        <a href="{{ path('product_show', {'id': product.id}) }}" class="btn btn-info"><i class="fas fa-eye"></i></a>
                        <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-outline-primary"><i class="fas fa-edit"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        {% endblock %}
    {% endembed %}

{% endblock %}
