{% extends 'base_admin.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}

    {% embed 'admin/title.html.twig' %}
        {% block sectiontitle %}
            <h2 class="mt-4">Product Item</h2>
            <a href="{{ path('product_index') }}" class="btn btn-secondary">back to list</a>
        {% endblock %}
    {% endembed %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex align-items-center">
        <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-success mr-2">edit</a>

        {{ include('admin/product/_delete_form.html.twig') }}
    </div>

{% endblock %}
