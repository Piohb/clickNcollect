{% extends 'base_admin.html.twig' %}

{% block title %}Stock index{% endblock %}

{% block body %}

    {% embed 'admin/title.html.twig' %}
        {% block sectiontitle %}
            <h2 class="mt-4">Stock index</h2>
            <a href="{{ path('stock_new') }}" class="btn btn-primary">Create new</a>
        {% endblock %}
    {% endembed %}

    {% embed 'admin/table.html.twig' %}
        {% block table %}
            <thead>
            <tr>
                <th>Shop</th>
                <th>Product</th>
                <th>Stock</th>
                <th>Price</th>

                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for stock in stocks %}
                <tr>
                    <td>{{ stock.shop.name }}</td>
                    <td>{{ stock.product.name }}</td>
                    <td>{{ stock.price }}</td>
                    <td>{{ stock.stock }}</td>
                    <td>
                        <a href="{{ path('stock_show', {'id': stock.id}) }}" class="btn btn-info"><i class="fas fa-eye"></i></a>
                        <a href="{{ path('stock_edit', {'id': stock.id}) }}" class="btn btn-outline-primary"><i class="fas fa-edit"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        {% endblock %}
    {% endembed %}

{% endblock %}
